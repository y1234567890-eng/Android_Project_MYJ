<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurahJumah">

    <ImageButton
        android:id="@+id/testPlayJumah"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/resetPlayJumah"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_circle_outline"
        android:contentDescription="@string/play_surah_jumah" />

    <ImageButton
        android:id="@+id/resetPlayJumah"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_replay"
        android:contentDescription="@string/replay_surah_jumah_from_start" />

    <ImageButton
        android:id="@+id/backBtnJumah"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_to_surahs" />

    <ImageView
        android:id="@+id/imageViewJumah"
        android:layout_width="405dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:tag="Image1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testPlayJumah"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_jumah_1"
        android:contentDescription="@string/surah_dukhan" />

    <ImageButton
        android:id="@+id/forwardPageBtnJumah"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewJumah"
        app:srcCompat="@drawable/ic_navigate_next"
        android:contentDescription="@string/next_page" />

    <TextView
        android:id="@+id/instructionJumah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_buttons_to_navigate_through_pages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forwardPageBtnJumah"
        app:layout_constraintStart_toEndOf="@+id/backPageBtnJumah"
        app:layout_constraintTop_toBottomOf="@+id/imageViewJumah" />

    <ImageButton
        android:id="@+id/backPageBtnJumah"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewJumah"
        app:srcCompat="@drawable/ic_arrow_back_ios"
        android:contentDescription="@string/previous_page" />


</androidx.constraintlayout.widget.ConstraintLayout>